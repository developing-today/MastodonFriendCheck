{
  "manifest_version": 3,
  "version": "0.9.0",
  "name": "Mastodon Friend Checker",
  "description": "This extension shows 'Following' if you've already followed a remote Mastodon web profile.",
  "homepage_url": "https://src.developing.today/MastodonFriendChecker",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "permissions": ["activeTab", "alarms", "scripting", "storage", "contextMenus"],
  "optional_host_permissions": ["https://*/*"],
  "action": {
    "default_icon":  "res/icon.png",
    "default_title": "Toggle Mastodon Page\nüêò üêò Jump Now  üêò"
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+J"
      },
      "description": "Toggle/Jump Mastodon Page"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/@*",
        "*://*/users/*",
        "*://*/web/statuses/*"
      ],
      "js": ["src/content.js"],
      "runAt": "document_start"
    }
  ],
  "options_ui": {
    "page": "src/options.html"
  },
  "icons": {
    "16": "res/icon16.png",
    "128": "res/icon128.png"
  }
}
